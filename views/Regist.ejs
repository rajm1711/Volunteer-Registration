<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <title>Document</title>
</head>

<body>

  <div class="container">
    <div class="row">
      <div class="h2 text-center m-4"> Volunteer Resgistration </div>
      <form class="row g-3 col-6 p-2 m-auto" action="/addVOL" method="post">
        <div class="col-12">
          <label for="inputEmail4" class="form-label" >Name</label>
          <input type="text" class="form-control" id="inputEmail4" name="name" placeholder="Raj Kapoor">
        </div>
        <div class="col-12">
          <label for="inputPassword4" class="form-label">Email </label>
          <input type="email" class="form-control" id="inputPassword4" name="email" placeholder="rk@gmail.com">
        </div>
        <div class="col-12">
          <label for="inputAddress" class="form-label">Phone</label>
          <input type="number" class="form-control" id="inputAddress" name="phone" placeholder="1234134243">
        </div>
        <div class="col-12">
          <label for="inputAddress2" class="form-label">Skills</label>
          <input type="text-area" class="form-control" id="inputAddress2" name="skills" placeholder="Web-Developement,Web-Design.... ">
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary">Register</button>
        </div>
      </form>

      <div class="h2 m-4 text-center">
        Volunteer's List
      </div>
      <div class="container d-flex ">

        <% stores.forEach((s)=>{ %>
          <div class="card ">
            <div class="card-header">
              <%=s.id %>
            </div>
            <div class="card-body">
              <h5 class="card-title">Name : <%=s.name %>
              </h5>
              <p class="card-text">Email : <%=s.email %>
              </p>
              <p class="card-text">Phone : <%=s.phone %>
              </p>
                <p class="card-text">Skills :<span class="fw-semibold"> <%=s.skills %></span>
              </p>
              <a href="/editVOL/<%=s.id%>" class="btn btn-primary">Edit</a>
              <a href="/deleteVOL/<%=s.id%>" class="btn btn-danger">Delete</a>
            </div>
          </div>
          <% }) %>


      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

</body>

</html>